<body>
    <h1>Search Page</h1>
    <form action="/movie/searchMovies" method="POST">
        <label for="name">Name:</label>
        <input type="text" name="name">
        <br>
        <label for="language">Language:</label>
        <select class="form-select" aria-label="Default select example" name="language">
            <option selected value="">Open this select menu</option>
            <option value="English">English</option>
            <option value="French">French</option>
            <option value="Russian">Russian</option>
            <option value="Hebrew">Hebrew</option>
          </select>
          <br>
        <label for="genre"> Select a gener:</label>
        <select class="form-select" aria-label="Default select example" id="genres"  name="genres" required>
            <option selected value="">Open this select menu</option>
            <% generslist.forEach(x=>{ %>
            <option value="<%=x%>" name="genres"><%= x %></option>
           <% }) %>
          </select>
          <br>
          <button type="submit" id="chksubmit">Search</button>  
    </form>
    <br>
    <a href="/movie">Back to Menu</a>
